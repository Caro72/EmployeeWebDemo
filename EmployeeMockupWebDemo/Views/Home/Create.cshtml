@using System.ComponentModel.DataAnnotations;
@using EmployeeMockupWebDemo.Entities
@model Empleados

@{
    ViewBag.Title = "Home";
}

<h1>Ingresar Nuevo</h1>
@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(m => m.Nombre)
        @Html.EditorFor(m => m.Nombre)
        @Html.ValidationMessageFor(m => m.Nombre)
    </div>
    <div>
        @Html.LabelFor(m => m.Apellidos)
        @Html.EditorFor(m => m.Apellidos)
        @Html.ValidationMessageFor(m => m.Apellidos)
    </div>
    <div>
        @Html.LabelFor(m => m.Cedula)
        @Html.EditorFor(m => m.Cedula)
        @Html.ValidationMessageFor(m => m.Cedula)
    </div>
    <div>
        @Html.LabelFor(m => m.Departamento)
        @Html.DropDownListFor(m => m.Departamento, Html.GetEnumSelectList(typeof(Departamentos)))
        @Html.ValidationMessageFor(m => m.Departamento)
    </div>
    <div>
        @Html.LabelFor(m => m.Correo)
        @Html.EditorFor(m => m.Correo)
        @Html.ValidationMessageFor(m => m.Correo)
    </div>
    <div>
        @Html.LabelFor(m => m.Telefono)
        @Html.EditorFor(m => m.Telefono)
        @Html.ValidationMessageFor(m => m.Telefono)
    </div>
    <div>
        <input type="submit" value="Ingresar Nuevo" />
    </div>

}

<div>@Html.ActionLink("Regresar a inicio", "Index")</div>